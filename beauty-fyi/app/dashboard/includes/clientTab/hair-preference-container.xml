<StackLayout id="hairPreferenceContainer" visibility="{{ hairPreferenceContainerVisbility ? 'visible' : 'collapsed' }}" paddingTop="20" height="513px">
    <GridLayout id="hairPreferenceUndditable" rows="auto, 20, auto" columns="*" horizontalAlignment="center" width="100%" visibility="{{ editHairType ? 'collapsed' : 'visible' }}">
        
        <Label row="1" class="line" text="" width="30%" textWrap="true" />
        <Label row="2"  class="h4" textWrap="true" paddingLeft="25" paddingTop="20">
          <Label.formattedText>
              <FormattedString>
                <FormattedString.spans>
                  <Span text="Hair goal: " />
                  <Span text="Healthy and long hair" class="font-bold" />
                </FormattedString.spans>
              </FormattedString>
            </Label.formattedText>
        </Label>
        
        
    </GridLayout>
</StackLayout>





