<Page navigatingTo="onNavigatedTo" loaded="onPageLoaded" actionBarHidden="true" xmlns:tabs="dashboard/tabs" xmlns:Card="nativescript-cardview">
    <TabView 
        loaded="onLoaded" 
        selectedIndex="{{tabSelectedIndex}}" 
        selectedIndexChanged="onSelectedIndexChanged" 
        androidTabsPosition="bottom"
        tabBackgroundColor="#fff"
        selectedTabTextColor="#9900ff">
        <TabViewItem title="Home">
            <StackLayout class="plain-background">
                <tabs:home/>
            </StackLayout>
        </TabViewItem>
        <TabViewItem title="Clients">
            <StackLayout>
                <tabs:clients/>
            </StackLayout>
        </TabViewItem>
        <TabViewItem title="Services">
            <StackLayout>
                <tabs:services/>
            </StackLayout>
        </TabViewItem>
        <TabViewItem title="Schedule">
            <StackLayout>
                <tabs:website/>
            </StackLayout>
        </TabViewItem>
    </TabView>
</Page>