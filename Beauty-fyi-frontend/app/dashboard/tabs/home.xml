<ScrollView height="100%" xmlns:Card="@nstudio/nativescript-cardview" xmlns:lv="nativescript-ui-listview" xmlns:topBar="dashboard/includes/topBar">
    <GridLayout rows="70, *, auto, auto">
        <StackLayout row="0">
            <topBar:main-top-bar/>
        </StackLayout>
        <Card:CardView row="1" class="cardStyle" margin="5" elevation="10" radius="10" width="97%" style="padding-bottom: 25px">
            <StackLayout margin="30">
                <Label text="SATURDAY 7th NOVEMBER 2020" class="h5" textWrap="true" />
                <Label text="Hey Klerissa," class="h3 font-bold" textWrap="true" />
                <Label text="So far you have made £100 today and £800 this week" class="h3 font-bold" textWrap="true" />
            </StackLayout>   
        </Card:CardView>  
        <Card:CardView row="2" class="cardStyle" margin="5" elevation="10" radius="10" width="97%" style="padding-bottom: 25px">
            <StackLayout margin="20">
                <lv:RadListView id="notificationList" class="list-group" width="100%" style="background-color: transparent"> 
                    <lv:RadListView.listViewLayout>
                        <lv:ListViewLinearLayout scrollDirection="Vertical" itemInsertAnimation="fade"/>
                    </lv:RadListView.listViewLayout>
                    <lv:RadListView.itemTemplate style="background-color: transparent">
                        <GridLayout rows="auto" columns="*, auto" style="padding-bottom: 30px">
                            <Label text="" textWrap="true" />
                            
                        </GridLayout>
                    </lv:RadListView.itemTemplate>
                </lv:RadListView>
            </StackLayout>
        </Card:CardView>
        <Card:CardView row="3" class="cardStyle" margin="5" elevation="10" radius="10" width="97%" style="padding-bottom: 25px">
            <StackLayout style="padding: 60px">
                <Label text="Up coming bookings" class="h4" textWrap="true" />
                <lv:RadListView id="bookingList" class="list-group" width="100%" style="background-color: transparent"> 
                    <lv:RadListView.listViewLayout>
                        <lv:ListViewLinearLayout scrollDirection="Vertical" itemInsertAnimation="fade"/>
                    </lv:RadListView.listViewLayout>
                    <lv:RadListView.itemTemplate style="background-color: transparent">
                        <GridLayout rows="30, 30" columns="auto, *, auto" style="padding-bottom: 30px">
                            <Image id="{{ id }}" tap="{{ ontest }}" src="{{ clientImage }}" rowSpan="2" col="0" class="img-circle img-container" stretch="none"/>
                            <Label id="{{ id }}" tap="{{ ontest }}" text="{{ clientName }}" row="0" col="1" class="font-bold h4" style="margin-top: -8px; margin-bottom: -8px" textWrap="true" />
                            <Label id="{{ id }}" tap="{{ ontest }}" text="{{ service }}" row="1" col="1" class="h5" style="margin-top: -8px; margin-bottom: -8px" textWrap="true" />
                            <Label id="{{ id }}" tap="{{ ontest }}" text="{{ time }}" rowSpan="2" col="2" class="h4" textWrap="true" />                
                        </GridLayout>
                    </lv:RadListView.itemTemplate>
                </lv:RadListView>
            </StackLayout>
       </Card:CardView>  
    </GridLayout>
</ScrollView>

