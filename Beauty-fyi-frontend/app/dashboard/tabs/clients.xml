<StackLayout xmlns:lv="nativescript-ui-listview">
    <lv:RadListView id="clientList" class="list-group" style="background-color: transparent" loadOnDemandMode="Auto"> 
        <lv:RadListView.listViewLayout>
            <lv:ListViewLinearLayout  spanCount="2" />
        </lv:RadListView.listViewLayout>
        <lv:RadListView.itemTemplate >    
            <GridLayout rows="5, 70, 5" columns="10, 70, auto" class="list-group-borders">
            <Image src="{{ clientImage }}" row="1" col="1" decodeWidth="70" style="border-radius: 200px" />  
            <GridLayout verticalAlignment="bottom" row="1" col="2">
                <Label text="{{ clientName}}" class="font-bold h4" textWrap="true" />
            </GridLayout>
               
            </GridLayout>
        </lv:RadListView.itemTemplate>
    </lv:RadListView>
</StackLayout>

