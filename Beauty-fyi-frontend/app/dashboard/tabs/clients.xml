<StackLayout  xmlns:Card="@nstudio/nativescript-cardview" xmlns:lv="nativescript-ui-listview" xmlns:topBar="dashboard/includes/topBar" loaded="clientPageLoaded" height="88%">
    <GridLayout rows="auto, *, auto">
        <StackLayout row="0">
        </StackLayout>
        <StackLayout row="1" height="90%">
            <lv:RadListView id="clientList" class="list-group" style="background-color: transparent" pullToRefresh="true" pullToRefreshInitiated="onPullToRefreshInitiated"> 
                <lv:RadListView.listViewLayout>
                    <lv:ListViewLinearLayout  spanCount="2" />
                </lv:RadListView.listViewLayout>
                <lv:RadListView.itemTemplate >    
                    <GridLayout id="{{ id }}" tap="viewClientProfile" rows="5, 70, 5" columns="10, 70, 10, auto" class="list-group-borders">
                    <Image src="{{ clientImage }}" row="1" col="1" height="100%" decodeWidth="100%" load="async" borderRadius="50" stretch="aspectFill" />  
                        <StackLayout verticalAlignment="center" row="1" col="3" marginTop="20">
                            <Label text="{{ clientName }}" class="font-bold h4" textWrap="true" />
                        </StackLayout>
                    </GridLayout>
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
        </StackLayout>
            <StackLayout row="2" orientation="horizontal" horizontalAlignment="center" verticalAlignment="bottom">
                <Button class="btn btn-white" text="Add a client" tap="inviteClient" width="50%" />
            </StackLayout>
    </GridLayout>
</StackLayout>