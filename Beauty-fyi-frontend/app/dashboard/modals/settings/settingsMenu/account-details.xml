<Page shownModally="onShownModally" loaded="loaded">
    <GridLayout rows="auto, auto, *, auto" columns="" xmlns:topBar="dashboard/includes/topBar" xmlns:includes="dashboard/includes/schedule">
        <topBar:menu-header row="0" header="Account details" tap="goBack"/>
        <StackLayout row="1" paddingLeft="25" paddingRight="25"  marginBottom="25"  paddingTop="10">
            <Label  text="Manage your account details" class="h3"  textWrap="true"/>
            <Label  text="Change the details of your account here." class="h5" textWrap="true"/>
        </StackLayout>
        <StackLayout row="2" paddingLeft="9" paddingRight="9">
            <Label text="Name" color="gray" textWrap="true" paddingLeft="20" fontSize="14"/>
            <TextField maxLength="60" id="" hint="" class="textFieldInputSmall" paddingBottom="10" blur="" returnPress=""/>
            <Label text="Email" color="gray" textWrap="true" paddingLeft="20" fontSize="14"/>
            <TextField maxLength="60" id="" keyboardType="email" hint="" class="textFieldInputSmall" paddingBottom="10" blur="" returnPress=""/>
            <Label text="Password" color="gray" textWrap="true" paddingLeft="20" fontSize="14"/>
            <TextField maxLength="60" text="hgifdojgifdojgdfg" id="" secure="true" hint="" class="textFieldInputSmall" paddingBottom="10" blur="" returnPress="" editable="false"/>
            <Label text="Phone number" color="gray" textWrap="true" paddingLeft="20" fontSize="14"/>
            <TextField maxLength="60" id="" keyboardType="number" hint="" class="textFieldInputSmall" paddingBottom="10" blur="" returnPress=""/>
            <Label text="Location" color="gray" textWrap="true" paddingLeft="20" fontSize="14"/>
            <TextField maxLength="255" id="" hint="" class="textFieldInputSmall" paddingBottom="10" blur="" returnPress=""/>
        </StackLayout>
        <StackLayout row="3">
            <Button text="Save" class="btn btn-white" /> 
        </StackLayout>
    </GridLayout>
</Page>