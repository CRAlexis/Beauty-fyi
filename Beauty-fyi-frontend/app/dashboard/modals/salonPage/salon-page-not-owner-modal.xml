<Page shownModally="onShownModally" loaded="loaded" xmlns:Card="@nstudio/nativescript-cardview" xmlns:CheckBox="@nstudio/nativescript-checkbox">
    <ScrollView>
        <GridLayout rows="250, auto, auto, auto, auto" columns="">
            <StackLayout row="0">
                <Image src="~/images/temp7.png" stretch="aspectFill" />
                
            </StackLayout>
            <StackLayout row="1">
                <GridLayout rows="auto, auto" columns="*, auto" margin="20">
                    <Label row="0" col="0" text="Curly By Nature" class="h4 font-bold" textWrap="true" />
                    <Label row="0" col="1" text="&#xf004;" class="far" fontSize="20" textWrap="true" />
                    <StackLayout row="1" col="0" orientation="horizontal">
                        <Label text="5.0" class="h5" textWrap="true" paddingRight="10" />
                        <Label text="&#xf005;" class="far" fontSize="16" paddingRight="5" textWrap="true" />
                        <Label text="&#xf005;" class="far" fontSize="16" paddingRight="5" textWrap="true" />
                        <Label text="&#xf005;" class="far" fontSize="16" paddingRight="5" textWrap="true" />
                        <Label text="&#xf005;" class="far" fontSize="16" paddingRight="5" textWrap="true" />
                        <Label text="&#xf005;" class="far" fontSize="16" paddingRight="5" textWrap="true" />
                        <Label text="10 reviews" class="h5" textWrap="true" />
                    </StackLayout>
                    <Label row="1" col="1" text="&#xf054;" class="fas" fontSize="20" textWrap="true" />        
                </GridLayout>
                <Label text="" class="line" width="90%" textWrap="true" />
            </StackLayout>
            <StackLayout row="2">
                <GridLayout rows="auto, auto" columns="*, auto" margin="10">
                    <Label row="0" col="0" text="View venue details" class="h4" textWrap="true" />
                    <Label row="1" col="0" text="North Wembley" textWrap="true" />
                    <Label row="1" col="1" text="&#xf054;" fontSize="20" class="fas" textWrap="true" />        
                </GridLayout>
                <Label text="" class="line" width="90%" textWrap="true" />
            </StackLayout>
            <StackLayout row="3" margin="10" xmlns:lv="nativescript-ui-listview">
                <Label text="Hey! These are the serices that I offer." class="h4 font-bold" textWrap="true" />
                <lv:RadListView id="serviceList" class="list-group" width="100%" style="background-color: transparent"> 
                        <lv:RadListView.listViewLayout>
                            <lv:ListViewLinearLayout scrollDirection="Vertical" itemInsertAnimation="fade"/>
                        </lv:RadListView.listViewLayout>
                        <lv:RadListView.itemTemplate style="background-color: transparent">
                            <GridLayout rows="30, 40, auto" columns="*, auto" marginBottom="8">
                                <Label row="0" col="0" class="h4" text="{{ serviceName }}" textWrap="true" marginTop="-5" marginBottom="-5"/>
                                <StackLayout row="1" col="0" orientation="horizontal">
                                    <Label text="&#xf05a;" class="fas" fontSize="20" textWrap="true" marginTop="-5" marginBottom="-5" />
                                    <Label text="Details" class="font-bold" textWrap="true" marginTop="-5" marginBottom="-5"/> 
                                    <Label text="{{ serviceDuration }}" color="gray" textWrap="true" marginTop="-5" marginBottom="-5"/>                  
                                </StackLayout>
                                <StackLayout tap="serviceTapped" serviceId="{{ serviceId }}" rowSpan="2" col="1" orientation="horizontal">
                                    <Label text="{{ servicePrice}}" maginTop="5" class="h4" textWrap="true" />
                                    <Label text="&#xf055;" class="fas" fontSize="24" textWrap="true" />     
                                    <Label visibility="collapsed" text="&#xf058;" class="fas" fontSize="24" textWrap="true" />                      
                                </StackLayout>      
                                <StackLayout row="2" colSpan="2" backgroundColor="#ededed" visibility="collapsed">
                                    <CheckBox:CheckBox tap="addonTapped" serviceId="{{ serviceId }}" addonId="{{ addonId[0] }}" text="{{ addonText[0] }}" fontSize="14" color="black" visibility="{{ addonVisibility[0] }}" checked="false" margin="10"/>
                                    <CheckBox:CheckBox tap="addonTapped" serviceId="{{ serviceId }}" addonId="{{ addonId[1] }}"  text="{{ addonText[1] }}" fontSize="14" color="black" visibility="{{ addonVisibility[1] }}" checked="false" margin="10"/>
                                    <CheckBox:CheckBox tap="addonTapped" serviceId="{{ serviceId }}" addonId="{{ addonId[2] }}" text="{{ addonText[2] }}" fontSize="14" color="black" visibility="{{ addonVisibility[2] }}" checked="false" margin="10"/>
                                    <CheckBox:CheckBox tap="addonTapped" serviceId="{{ serviceId }}" addonId="{{ addonId[3] }}"  text="{{ addonText[3] }}" fontSize="14" color="black" visibility="{{ addonVisibility[3] }}" checked="false" margin="10"/>
                                    <CheckBox:CheckBox tap="addonTapped" serviceId="{{ serviceId }}" addonId="{{ addonId[4] }}" text="{{ addonText[4] }}" fontSize="14" color="black" visibility="{{ addonVisibility[4] }}" checked="false" margin="10"/>
                                </StackLayout>                           
                            </GridLayout>
                        </lv:RadListView.itemTemplate>
                    </lv:RadListView>
            </StackLayout>
            <StackLayout row="4">
                <Button id="checkAvailabilityButton" opacity="0" visibility="collapsed" text="Check Availability" tap="checkAvailibilityOnService" class="btn btn-white"/>
                
            </StackLayout>
        </GridLayout>
            
    </ScrollView>
</Page>