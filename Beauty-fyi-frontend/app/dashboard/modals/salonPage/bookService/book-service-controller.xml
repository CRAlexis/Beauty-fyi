<Page shownModally="onShownModally" loaded="loaded" xmlns:Card="@nstudio/nativescript-cardview">
    <GridLayout rows="60, *, auto" columns="">
        <Card:CardView row="0" class="cardStyle" elevation="10" radius="0" >
            <StackLayout orientation="horizontal" padding="15" class="">
                <Label text="&#xf104;" class="fas" style="font-size: 19; padding-top: 15px; padding-right: 15" textWrap="true" />
                <Label class="h4 font-bold" color="black" text="{{ slideTitle }}" textWrap="true" />    
            </StackLayout>
            
        </Card:CardView>
        <StackLayout row="1" xmlns:includes="dashboard/includes/bookService">
            <includes:choose-date/>
            <includes:consultation/>
        </StackLayout>
        <StackLayout row="2" backgroundColor="white">
            <Button text="{{ nextSlideTitle}} " tap="{{ goToNextSlide }}" class="btn btn-white" width="90%"/>
        </StackLayout>
    </GridLayout>
</Page>