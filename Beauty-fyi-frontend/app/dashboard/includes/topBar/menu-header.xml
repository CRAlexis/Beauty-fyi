<StackLayout xmlns:Card="@nstudio/nativescript-cardview" loaded="load" tap="headerBarClicked">
<Card:CardView row="0" class="cardStyle" elevation="10" marginBottom="5" radius="0" >
    <GridLayout columns="40, *, auto" paddingLeft="20" paddingRight="10" paddingBottom="10">
        <StackLayout tap="goBack" col="0" orientation="horizontal"  paddingTop="15">
            <Label text="&#xf104;"  class="fas" fontSize="19"  textWrap="true" />
        </StackLayout>
        <StackLayout col="1">
            <Label id="title" text="" class="h4 font-bold" color="black"  paddingTop="15" /> 
        </StackLayout>
        <StackLayout tap="info" id="infoContainer" col="2" orientation="horizontal" paddingTop="15" paddingLeft="10" paddingRight="20" visibility="collapsed">
            <Label text="&#xf129;" class="fas" fontSize="19" textWrap="true" />
        </StackLayout>
    </GridLayout>
</Card:CardView>
</StackLayout>