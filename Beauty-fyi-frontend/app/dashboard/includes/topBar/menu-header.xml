<StackLayout xmlns:Card="@nstudio/nativescript-cardview" loaded="load" tap="headerBarClicked">
<Card:CardView row="0" class="cardStyle" elevation="10" marginBottom="2" radius="0" backgroundColor="#A6E6CE" >
    <GridLayout columns="auto, *, auto" paddingLeft="5" paddingRight="10" paddingBottom="10">
        <StackLayout tap="goBack" paddingLeft="15" paddingRight="15" col="0" orientation="horizontal"  paddingTop="15">
            <Label text="&#xf104;"  class="fas" fontSize="19" color="white"  textWrap="true" />
        </StackLayout>
        <StackLayout col="1">
            <Label id="title" text="" class="h4 font-bold" color="white"  paddingTop="15" /> 
        </StackLayout>
        <StackLayout tap="info" id="infoContainer" col="2" orientation="horizontal" paddingTop="15" paddingLeft="10" paddingRight="20" visibility="collapsed">
            <Label text="&#xf129;" class="fas" color="white" fontSize="19" textWrap="true" />
        </StackLayout>
    </GridLayout>
</Card:CardView>
</StackLayout>