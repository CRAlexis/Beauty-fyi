<Card:CardView tap="headerBarClicked" class="cardStyle" elevation="10" radius="0" marginBottom="5"
    xmlns:Card="@nstudio/nativescript-cardview" loaded="load">
    <GridLayout row="auto" columns="75, *, 75" class="header-gradient" color="white">
        <StackLayout col="0" row="0" tap="goToMessages">
            <Label text="&#xf0e0;" class="far" textAlignment="center" paddingTop="15" fontSize="30"/>
        </StackLayout>
        <Label id="title" col="1" row="0" class="font" text="Beauty-fyi" textWrap="true" style="font-size: 25px; padding-top: 35px" textAlignment="center" />
        <StackLayout col="2" row="0" tap="goToSettings">
            <Label text="&#xf013;" class="fas" textAlignment="center" paddingTop="15" fontSize="30" />
        </StackLayout>
    </GridLayout>
</Card:CardView>