<ScrollView id="consultationPageContainer"
    xmlns:CheckBox="@nstudio/nativescript-checkbox"
    xmlns:Card="@nstudio/nativescript-cardview">
    <GridLayout rows="auto, *" columns="">
        <StackLayout row="0">
            <Label text="Consultation" class="h4" textWrap="true" paddingLeft="20" paddingRight="20" paddingTop="10"/>
            <StackLayout paddingTop="20" paddingBottom="20"
                xmlns:lv="nativescript-ui-listview">
                <lv:RadListView id="consultationPageForm" itemTemplateSelector="templateSelector" class="list-group" style="background-color: transparent">
                    <lv:RadListView.listViewLayout>
                        <lv:ListViewLinearLayout/>
                    </lv:RadListView.listViewLayout>
                    <lv:RadListView.itemTemplates>
                        <template key="0">
                            <StackLayout>
                                <Label visibility="{{ isCheckBox ? 'collapsed' : 'visible' }}" text="{{question}}" color="gray" textWrap="true" paddingLeft="20" fontSize="14"/>
                                <TextField id="{{id}}" textChange="validateConsultationPage" visibility="{{ isTextField ? 'visible' : 'collapsed' }}" class="textFieldInputSmall" marginBottom="15" hint="Enter text here" text="" editable="true"/>
                            </StackLayout>
                        </template>
                        <template key="1">
                            <StackLayout>
                                <Label visibility="{{ isCheckBox ? 'collapsed' : 'visible' }}" text="{{question}}" color="gray" textWrap="true" paddingLeft="20" fontSize="14"/>
                                <TextField id="{{id}}" textChange="validateConsultationPage" visibility="{{ isDropDown ? 'visible' : 'collapsed' }}" optionContext="{{optionContext}}" class="textFieldInputSmall" tap="{{ dropDownClicked }}" marginBottom="15" hint="Please select" editable="false"/>

                            </StackLayout>
                        </template>
                        <template key="2">
                            <StackLayout>
                                <CheckBox:CheckBox id="{{id}}" tap="validateConsultationPage" visibility="{{ isCheckBox ? 'visible' : 'collapsed' }}" class="textFieldInputSmall" fontSize="14" text="{{question}}" color="gray" checked="false" margin="10" marginLeft="14" paddingBottom="5"/>
                            </StackLayout>
                        </template>
                    </lv:RadListView.itemTemplates>
                </lv:RadListView>
            </StackLayout>

            <StackLayout paddingBottom="10">
                <TextView id="appointmentNotes" width="88%" marginTop="" borderColor="#DEDEDE" borderWidth="1" hint="Is there anything else you want to say?" class="textFieldInputSmall"></TextView>
            </StackLayout>
        </StackLayout>
        <StackLayout row="1"
            xmlns:lv="nativescript-ui-listview">
            <Button id="uploadReferenceImageButton" class="btn btn-white" text="Upload reference images" width="88%" tap="{{ uploadReferenceImage }}" />
            <lv:RadListView id="uploadedImageList" class="list-group" style="background-color: transparent">
                <lv:RadListView.listViewLayout>
                    <lv:ListViewLinearLayout scrollDirection="Horizontal" />
                </lv:RadListView.listViewLayout>
                <lv:RadListView.itemTemplate >
                    <Image id="{{ index }}" tap="{{uploadedImageTapped}}" src="{{ image }}" height="{{height}}" decodeWidth="{{height}}" stretch="aspectFill" load="async" margin="2" />
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
        </StackLayout>
    </GridLayout>
</ScrollView>

