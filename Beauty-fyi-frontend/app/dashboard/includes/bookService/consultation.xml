<ScrollView id="consultationPageContainer" xmlns:CheckBox="@nstudio/nativescript-checkbox" xmlns:Card="@nstudio/nativescript-cardview">
    <GridLayout rows="auto, *" columns="">
        <StackLayout row="0">
            <Label text="Answer these questions to help your stylist..." class="h4" textWrap="true" paddingLeft="20" paddingRight="20" paddingTop="10"/>
            <StackLayout paddingTop="20" paddingBottom="20" xmlns:lv="nativescript-ui-listview">
                <lv:RadListView id="consultationPageForm" class="list-group" style="background-color: transparent"> 
                    <lv:RadListView.listViewLayout>
                        <lv:ListViewLinearLayout/>
                    </lv:RadListView.listViewLayout>
                    <lv:RadListView.itemTemplate >   
                        <StackLayout>
                            <Label visibility="{{ isCheckBox ? 'collapsed' : 'visible' }}" text="{{question}}" color="gray" textWrap="true" paddingLeft="20" fontSize="14"/>
                            <TextField visibility="{{ isTextField ? 'visible' : 'collapsed' }}" class="textFieldInputSmall" marginBottom="10" hint="" text="" editable="true"/>
                            <TextField visibility="{{ isDropDown ? 'visible' : 'collapsed' }}" optionContext="{{optionContext}}" class="textFieldInputSmall" tap="{{ dropDownClicked }}" marginBottom="10" hint="Select" editable="false"/>
                            <CheckBox:CheckBox visibility="{{ isCheckBox ? 'visible' : 'collapsed' }}" class="textFieldInputSmall" text="{{question}}" color="gray" checked="false" margin="10"/>
                        </StackLayout>
                    </lv:RadListView.itemTemplate>
                </lv:RadListView>
            </StackLayout>
            <Label text="" class="line" width="90%" marginBottom="35" textWrap="true" />

            <StackLayout paddingBottom="10">
                <TextView id="appointmentNotes"  style="margin-top: 15px" borderColor="#DEDEDE" borderWidth="1" hint="Is there anything else you want to say?" class="textFieldInputSmall"></TextView>
            </StackLayout> 
        </StackLayout>
        <StackLayout row="1" xmlns:lv="nativescript-ui-listview" >
            <Button class="btn btn-white" text="Upload reference images" tap="{{ uploadReferenceImage }}" />   
            <lv:RadListView height="200" id="uploadedImageList" class="list-group" style="background-color: transparent"> 
                <lv:RadListView.listViewLayout>
                    <lv:ListViewGridLayout  spanCount="3" />
                </lv:RadListView.listViewLayout>
                <lv:RadListView.itemTemplate >    
                <StackLayout>
                    <Image id="{{ index }}" tap="{{uploadedImageTapped}}" src="{{ image }}" width="{{ width }}" stretch="aspectFit" load="async" margin="5" />
                </StackLayout>
                    
                </lv:RadListView.itemTemplate>
            </lv:RadListView>          
        </StackLayout>
    </GridLayout>
</ScrollView>

