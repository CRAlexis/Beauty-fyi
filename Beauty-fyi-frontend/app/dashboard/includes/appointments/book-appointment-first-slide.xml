<ScrollView id="bookAppointmentFirstSlideContainer" height="100%" xmlns:CheckBox="@nstudio/nativescript-checkbox" marginBottom="20" xmlns:Card="@nstudio/nativescript-cardview">
    <StackLayout>
    </StackLayout>
    <StackLayout paddingTop="20" paddingBottom="20" id="bookAppointmentFirstSlideButtonContainer" >
    
        
        <Card:CardView width="90%" margin="10" class="cardStyle" elevation="10">
           <StackLayout storeId="1" id="1" tap="{{serviceTapped}}" height="60" serviceTapped="false">
            <Label text="" class="" textWrap="true"  textAlignment="left"  paddingLeft="13" paddingTop="13" paddingRight="13">
                <Label.formattedText>
                  <FormattedString>
                    <FormattedString.spans>
                      <Span text="Colouring and trim" class="font-bold h4" color="black" />
