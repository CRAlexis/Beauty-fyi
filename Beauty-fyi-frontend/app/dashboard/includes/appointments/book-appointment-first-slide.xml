                    <Image src="~/temp7.png" class="btn-light-grey-outline" height="40%" stretch="aspectFill" load="async" margin="5"/>
                </StackLayout>
                <StackLayout>
                    
                    <StackLayout orientation="horizontal" paddingLeft="4">
                        <Label text="&#xf017;" class="far" fontSize="16"/>
                        <Label text="2 hours" textWrap="true" paddingLeft="10"/>
                        
                    </StackLayout>
                    <Label textAlignment="left" class="h4" textWrap="true" paddingLeft="4">
