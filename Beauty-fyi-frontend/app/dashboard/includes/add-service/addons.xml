<ScrollView>
<StackLayout paddingTop="35">
    <StackLayout row="0" paddingLeft="25" paddingRight="25"  marginBottom="25">
        <Label row="0" text="Addons" class="h3" textWrap="true"/>
        <Label row="0" text="Include optional addons with your service." class="h5" textWrap="true"/>
    </StackLayout>
    <StackLayout xmlns:lv="nativescript-ui-listview">
        <lv:RadListView id="addonsListView" class="list-group" style="background-color: transparent"> 
        <lv:RadListView.listViewLayout>
            <lv:ListViewGridLayout  spanCount="1" />
        </lv:RadListView.listViewLayout>
        <lv:RadListView.itemTemplate >    
            <StackLayout marginBottom="25">
                <TextField hint="Addon name" text="{{ addonName  }}" class="textFieldInputSmall" />
                <TextField hint="Addon price" keyboardType="number" class="textFieldInputSmall" text="{{ addonPrice  }}" focus="addonPriceFocus" returnPress="addonPriceReturn" blur="addonPriceReturn" textChange="addonPriceTextChange"/>
                <TextField hint="Addon duration (minutes)" class="textFieldInputSmall" keyboardType="number" text="{{ addonDuration  }}" />
                <Label index="{{index}}" id="{{id}}" class="h5" paddingLeft="18" text="Remove addon" tap="removeAddon" textWrap="true" />   
                <Label text="" class="line" width="70%" textWrap="true" />       
            </StackLayout>
        </lv:RadListView.itemTemplate>
    </lv:RadListView>
    </StackLayout>
    <StackLayout>
        <Label id="" class="h5" paddingTop="10" text="Add addon" textAlignment="center" tap="addAddon" textWrap="true" />    
    </StackLayout>
</StackLayout>
</ScrollView>