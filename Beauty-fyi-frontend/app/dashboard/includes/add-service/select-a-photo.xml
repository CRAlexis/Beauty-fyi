<GridLayout rows="auto, auto, *" columns="">
    <StackLayout marginBottom="25" paddingLeft="25" paddingRight="25">
        <Label text="Image" class="h3"  textWrap="true"/>
        <Label text="Choose a photo for your service." class="h5" textWrap="true" />
        <Label text="Learn more." tap="learnMoreModal" textWrap="true" />
        
    </StackLayout>
    <Label row="1" tap="openGallery" textAlignment="center" marginBottom="10" text="Add new photo" textWrap="true" />
    <StackLayout row="2" id="serviceImageComponent" opacity="0">
         <Image   src="{{serviceImage}}" stretch="aspectFit" margin="5" backgroundColor="rgb(254, 254, 254)" />
    </StackLayout>
   
</GridLayout>
    