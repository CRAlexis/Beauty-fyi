<Page navigatingTo="onNavigatingTo" actionBarHidden="true">
    <ActionBar title="" icon=""></ActionBar>
    <GridLayout rows="*, 300, 205">
        <StackLayout row="0"> 
            <Label text="" textWrap="true" />
        </StackLayout>
        <StackLayout row="1" tap="navigateBack">
            <Label class="font-regular h1 letterSpacing" text="BEAUTY-FYI" color="black" horizontalAlignment="center" textWrap="true"/>
            <label class="font-regular h3" text="Your digital beauty assistant" color="black" horizontalAlignment="center" textWrap="true"/>
        </StackLayout>
        <StackLayout class="" row="2">
            <Button tap="signUp" class="btn btn-black-outline btn-rounded-sm" text="SIGN UP"  fontSize="18" height="50"/>
            <Button tap="logIn" class="btn btn-black btn-rounded-sm" text="LOG IN" fontSize="18" height="50"/>
        </StackLayout>
    </GridLayout>
</Page>

