<Page navigatingTo="onNavigatingTo" actionBarHidden="true">
    <ActionBar title="" icon=""></ActionBar>
    <ScrollView>
        <FlexboxLayout class="page bottom-gradient">
            <StackLayout style="margin-top: 370px" >
                <!--<Image src="~/logoart.png" width="60" height="60" />-->
                <Label class="font-regular h1" text="BEAUTY-FYI" style="color: #9900ff;" horizontalAlignment="center" textWrap="true"/>
                <label class="font-regular h3" text="Your digital beauty assistant" textWrap="true"/>
            </StackLayout>
                
            <StackLayout class="form" style="margin-top: 90px">
                <StackLayout class="">
                  <TextField class="textFieldInput" hint="Username" text="{{ username }}" width="90%" style=""></TextField>
                </StackLayout>

                <StackLayout class="" style="margin-top: 30px">
                  <TextField class="textFieldInput" KeyboardType="email" hint="Email" text="{{ email }}" width="90%" style=""></TextField>
                </StackLayout>

                <StackLayout class="" style="margin-top: 30px">
                  <TextField class="textFieldInput" hint="Password" text="{{ password }}" secure="true" width="90%" style=""></TextField>
                </StackLayout>

                <Button tap="{{ signUpTapped }}" class="btn btn-primary" text="Sign up" style="font-size: 20px; height: 150px; margin-top: 30px"></Button>

            </StackLayout>
            <StackLayout orientation="horizontal" style="margin-top: 30px">
                <Label text="Already have an account?" textAlignment="center"></Label>
                <Label class="font-bold" text=" Sign in" textWrap="true" textAlignment="center"/> 
            </StackLayout>

            <StackLayout style="margin-top: 100px; margin-left: 60px; margin-right: 60px">
                <StackLayout orientation="horizontal">
                    <Label class="line" text="" width="30%"/>
                    <Label text="Or sign up via" textWrap="true" textAlignment="center" width="40%"/>
                    <Label class="line" text="" width="30%"/>
                </StackLayout>

                <FlexboxLayout flexDirection="row" height="60" justifyContent="center" style="margin-top: 30px">
                    <Button tap="onTap" class="btn btn-white" width="40%">
                        <FormattedString>
                            <Span text="&#xf1a0;" class="fab" style="padding-right: 30px"></Span>     
                            <Span text="  " color="white"></Span>  
                            <Span class="font-bold" text="Google"></Span>         
                        </FormattedString>
                    </Button>
                    <Button tap="onTap" class="btn btn-white" width="40%">
                        <FormattedString>
                            <Span text="&#xf16d;" class="fab" style="padding-right: 30px"></Span>   
                            <Span text="  " color="white"></Span>  
                            <Span class="font-bold" text="Instagram"></Span>         
                        </FormattedString>
                    </Button>
                </FlexboxLayout>  
            </StackLayout>
        </FlexboxLayout>
    </ScrollView> 
</Page>
