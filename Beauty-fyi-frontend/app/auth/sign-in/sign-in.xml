<Page navigatingTo="onNavigatingTo" actionBarHidden="true">
    <ActionBar title="" icon=""></ActionBar>
    <GridLayout rows="30, 60, auto, auto, 160," class="bottom-gradient" >
        <ActivityIndicator busy="{{ processingHTTPRequest }}" color="purple" width="100" height="100" row="3"></ActivityIndicator>
            <StackLayout row="0"> 
                <Label text=" " textWrap="true" />
            </StackLayout>
            <StackLayout row="1" style="padding-left: 40px">
                <GridLayout columns="30, auto" tap="{{ navigateBack }}">
                    <Label  text="&#xf104;" class="fas" col="0" style="font-size: 19; padding-top: 15px" textWrap="true" />
                    <Label tap="{{ navigateBack }}" class="h4" col="1" text="Back"/>
                </GridLayout>    
            </StackLayout>
            <StackLayout row="2" style="padding-left: 40px; padding-right: 40px">
                <Label class="font-regular h1 letterSpacing" text="Sign in" textWrap="true"/>
                <label class="font-regular h4" text="and start connecting with people around the world" textWrap="true"/>
            </StackLayout>
            <StackLayout row="3">
                <StackLayout class="form" style="margin-top: 60px">
                    <StackLayout class="">
                      <TextField class="textFieldInput" hint="Email" keyboardType="email" autocorrect="false" autocapitalizationType="none" text="{{ email }}" width="90%" style="" isEnabled="{{ !processingHTTPRequest }}"></TextField>
                    </StackLayout>

                    <StackLayout class="" style="margin-top: 30px">
                      <TextField class="textFieldInput" hint="Password" text="{{ password }}" secure="true" width="90%" style="" isEnabled="{{ !processingHTTPRequest }}" visibility="{{ forgotPasswordVisibility ? 'visible' : 'collapsed' }}"></TextField>
                    </StackLayout>
                    <Label tap="{{ forgotPasswordTapped }} " text="Forgot password?" textWrap="true" textAlignment="right" visibility="{{ forgotPasswordVisibility ? 'visible' : 'collapsed' }}" style="margin-top: 20px; padding-right: 40px"/>
                    <Button tap="{{ signInTapped }}" class="btn btn-primary" text="{{ signInButtonText}}" style="font-size: 20px; height: 150px; margin-top: 30px"></Button>
                </StackLayout>
            </StackLayout>
            <Label tap="{{ signUpTapped }}" row="4" class="font-bold" text="Dont have an account? Sign up" class="h4" visibility="{{ forgotPasswordVisibility ? 'visible' : 'collapsed' }}" style="margin-top: 30px" textAlignment="center"></Label>
            
            <!--<Label row="4" text="{{ printValidationError }}" class="h5" textWrap="true" style="padding-left: 40px" color="red"/>-->
            
            
            
